<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="btn_common" parent="Base.Widget.AppCompat.Button.Borderless">
		<item name="android:starStyle">?android:attr/borderlessButtonStyle</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/margin15</item>
		<item name="android:layout_marginRight">@dimen/margin15</item>
		<item name="android:background">@drawable/btn_common</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/txtSize16</item>
	</style>

	<style name="btn_common_negative" parent="btn_common">
		<item name="android:background">@drawable/btn_common_negative</item>
	</style>

	<style name="btn_submit" parent="btn_common">
		<item name="android:layout_marginTop">@dimen/margin10</item>
		<item name="android:layout_marginBottom">@dimen/margin10</item>
		<item name="android:text">@string/submit</item>
	</style>

	<style name="btn_dlg">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:minHeight">@dimen/height40</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/dlg_font_color</item>
		<item name="android:textSize">@dimen/txtSize16</item>
	</style>
</resources>