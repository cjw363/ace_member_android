<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="3.0dip"/>
			<gradient
				android:angle="270.0"
				android:endColor="@color/pickerview_bg_topbar"
				android:startColor="@color/pickerview_bg_topbar"/>
		</shape>
	</item>
	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="0.0dip"/>
				<gradient
					android:angle="270.0"
					android:centerColor="@color/colorPrimaryLight"
					android:endColor="@color/colorPrimaryLight" android:startColor="@color/colorPrimaryLight"/>
			</shape>
		</clip>
	</item>

</layer-list>