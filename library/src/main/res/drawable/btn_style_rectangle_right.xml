		android:bottom="1dp"
		android:left="1dp"
		android:right="1dp">
		<shape>
			<solid android:color="#e4e4e4" />
			<padding
				android:bottom="10dp"
				android:left="10dp"
				android:right="10dp"
				android:top="10dp" />
