<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_enabled="false">
		<shape android:shape="rectangle">
			<solid android:color="@color/clr_exchange_currency_normal"/>
			<stroke android:width="@dimen/width1" android:color="@color/clr_exchange_currency_normal"/>
			<padding android:bottom="@dimen/padding2" android:left="@dimen/padding2" android:right="@dimen/padding2" android:top="@dimen/padding2"/>
			<corners android:radius="@dimen/width2"/>
		</shape>
	</item>

	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/clr_exchange_currency_select"/>
			<padding android:bottom="@dimen/padding2" android:left="@dimen/padding2" android:right="@dimen/padding2" android:top="@dimen/padding2"/>
			<corners android:radius="@dimen/width2"/>
		</shape>
	</item>

	<item android:state_checked="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/clr_exchange_currency_select"/>
			<padding android:bottom="@dimen/padding2" android:left="@dimen/padding2" android:right="@dimen/padding2" android:top="@dimen/padding2"/>
			<corners android:radius="@dimen/width2"/>
		</shape>
	</item>

	<item android:state_selected="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/clr_exchange_currency_select"/>
			<padding android:bottom="@dimen/padding2" android:left="@dimen/padding2" android:right="@dimen/padding2" android:top="@dimen/padding2"/>
			<corners android:radius="@dimen/width2"/>
		</shape>
	</item>

	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/white"/>
			<stroke android:width="@dimen/width1" android:color="@color/clr_exchange_currency_select"/>
			<padding android:bottom="@dimen/padding2" android:left="@dimen/padding2" android:right="@dimen/padding2" android:top="@dimen/padding2"/>
			<corners android:radius="@dimen/width2"/>
		</shape>
	</item>
</selector>
