<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_checked="true">
		<shape android:shape="oval">
			<solid android:color="@color/clr_lotto_ball"/>
			<size
				android:width="30dp"
				android:height="30dp"/>
		</shape>
	</item>


	<item android:state_pressed="true">
		<shape android:shape="oval">
			<solid android:color="@color/clr_lotto_ball"/>
			<size
				android:width="30dp"
				android:height="30dp"/>
		</shape>
	</item>

	<item android:state_selected="true">
		<shape android:shape="oval">
			<solid android:color="@color/clr_lotto_ball"/>
			<size
				android:width="30dp"
				android:height="30dp"/>
		</shape>
	</item>

	<item android:state_checked="false">
		<shape android:shape="oval">
			<solid android:color="@color/clr_special_checkbox_unselected"/>
			<size
				android:width="30dp"
				android:height="30dp"/>
		</shape>
	</item>
</selector>
