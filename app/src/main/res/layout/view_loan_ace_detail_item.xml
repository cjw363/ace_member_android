<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/padding5"
		android:paddingBottom="@dimen/padding5"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/margin10"
			android:layout_weight="3"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_term"
				style="@style/tv_common_content"
				android:gravity="start"
				android:textColor="@color/clr_order_title"
				android:paddingLeft="@dimen/padding10"/>

			<TextView
				android:id="@+id/tv_time"
				style="@style/tv_common_content"
				android:gravity="start"
				android:paddingLeft="@dimen/padding10"
				android:paddingTop="@dimen/padding5"
				android:textColor="@color/clr_list_time"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_amount"
				style="@style/tv_common_content"
				android:gravity="end"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.5"
			android:gravity="start|center_vertical"
			android:orientation="vertical">

			<android.support.v7.widget.AppCompatImageView
				android:layout_width="@dimen/width16"
				android:layout_height="@dimen/height16"
				app:srcCompat="@drawable/ic_arrow_right"/>
		</LinearLayout>
	</LinearLayout>

	<View style="@style/v_horizontal_divider_line1"/>
</LinearLayout>