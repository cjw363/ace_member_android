<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tool="http://schemas.android.com/tools"
	android:id="@+id/ll_content"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:padding="@dimen/padding10">

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/margin15">

		<android.support.v7.widget.AppCompatImageView
			android:id="@+id/iv_menu"
			android:layout_width="@dimen/width20"
			android:layout_height="@dimen/height20"/>

		<View
			android:id="@+id/v_dot"
			android:layout_width="@dimen/width6"
			android:layout_height="@dimen/height6"
			android:layout_gravity="end|top"
			android:background="@drawable/style_circle_red"
			android:visibility="gone"/>
	</FrameLayout>


	<TextView
		android:id="@+id/tv_menu_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/clr_common_title"
		android:textSize="@dimen/txtSize15"
		tool:text="@string/transaction"/>
</LinearLayout>