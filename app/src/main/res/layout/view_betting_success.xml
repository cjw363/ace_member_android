<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginBottom="@dimen/margin10"
	android:background="@drawable/et_style_rectangle"
	android:orientation="vertical"
	android:paddingLeft="@dimen/padding10"
	android:paddingRight="@dimen/padding10">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin15"
		android:gravity="center"
		android:minHeight="80dp"
		android:minWidth="@dimen/height40">

		<android.support.v7.widget.AppCompatImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			app:srcCompat="@drawable/ic_success_orange"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:minHeight="@dimen/height40"
		android:orientation="horizontal"
		>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="@string/betting_success"
			android:textColor="@color/clr_lotto_btn_text"
			android:textSize="@dimen/txtSize14"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/margin10"
		android:gravity="center">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginRight="@dimen/margin10"
			android:gravity="center_vertical"
			android:text="@string/betting_amount"
			android:textColor="@color/clr_lotto_btn_text"/>

		<TextView
			android:id="@+id/tv_bet_amount"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:textColor="@color/clr_lotto_tv_amount"
			android:textSize="@dimen/txtSize14"/>
	</LinearLayout>
</LinearLayout>