<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/height60"
              android:orientation="vertical">

	<View
		android:id="@+id/v_search_friends_divider"
		android:layout_width="match_parent"
		android:layout_height="@dimen/height10"
		android:background="@color/clr_light_gray1"/>

	<TextView
		android:id="@+id/tv_search_friends_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:padding="@dimen/padding10"
		android:text="@string/contacts"
		android:textColor="@color/clr_chat_tv_hint"
		android:textSize="@dimen/txtSize14"/>

	<View style="@style/v_horizontal_divider_line"/>
</LinearLayout>