<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/height80"
		android:background="@android:color/white"
		android:orientation="vertical"
		android:paddingRight="@dimen/padding10">

		<RelativeLayout
			android:id="@+id/rel_main"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin10">

			<ImageView
				android:id="@+id/img"
				android:layout_width="@dimen/width40"
				android:layout_height="@dimen/width40"
				android:src="@drawable/color_seekbar_pop_bg"/>

			<TextView
				android:id="@+id/txt"
				android:layout_width="@dimen/width40"
				android:layout_height="@dimen/height35"
				android:gravity="center"
				android:text="7"
				android:textColor="@android:color/holo_red_dark"/>
		</RelativeLayout>

		<SeekBar
			android:id="@+id/seekbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="@dimen/margin10"
			android:layout_marginLeft="@dimen/margin10"
			android:layout_marginRight="@dimen/margin10"
			android:focusable="true"
			android:maxHeight="@dimen/margin4"
			android:minHeight="@dimen/margin4"
			android:paddingLeft="@dimen/padding10"
			android:paddingRight="@dimen/padding8"
			android:progressDrawable="@drawable/seek_bar_progress_bg_lotto"
			android:thumb="@drawable/thumb_icon"/>

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:orientation="horizontal"
		android:paddingBottom="@dimen/padding5">

		<LinearLayout
			android:layout_width="@dimen/width0"
			android:layout_height="wrap_content"
			android:layout_weight="1">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="17dp"
				android:text="7"/>
		</LinearLayout>

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="@dimen/padding30"
			android:text="8"/>

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_horizontal"
			android:paddingLeft="@dimen/padding3"
			android:text="9"/>

		<LinearLayout
			android:layout_width="@dimen/width0"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="right">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="@dimen/padding20"
				android:text="10"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>