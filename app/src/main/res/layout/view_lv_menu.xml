<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/ll_content"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:orientation="horizontal"
	android:padding="@dimen/padding10">

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/iv_menu_icon"
		android:layout_width="@dimen/width25"
		android:layout_height="@dimen/height25"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/margin5"
		android:layout_marginRight="@dimen/margin15"
		app:srcCompat="@drawable/ic_balance"/>

	<TextView
		android:id="@+id/tv_menu_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toEndOf="@id/iv_menu_icon"
		android:textColor="@color/clr_common_title"
		android:textSize="@dimen/txtSize16"
		tools:text="@string/transaction"/>

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/iv_next"
		android:layout_width="@dimen/width16"
		android:layout_height="@dimen/height16"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="@dimen/margin5"
		app:srcCompat="@drawable/ic_arrow_right"/>

	<TextView
		android:id="@+id/tv_menu_content"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginRight="@dimen/margin5"
		android:layout_toLeftOf="@id/iv_next"
		android:gravity="center_vertical"
		android:textColor="@color/clr_common_content"
		android:textSize="@dimen/txtSize18"/>
</RelativeLayout>