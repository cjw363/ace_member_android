<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/rl_tab_item"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">

	<FrameLayout
		android:id="@+id/fl_item"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true">

		<android.support.v7.widget.AppCompatImageView
			android:id="@+id/iv_tab_item"
			android:layout_width="@dimen/width24"
			android:layout_height="@dimen/height24"
			tools:background="@drawable/sel_home"/>

		<View
			android:id="@+id/v_dot"
			android:layout_width="@dimen/width6"
			android:layout_height="@dimen/height6"
			android:layout_gravity="end|top"
			android:background="@drawable/style_circle_red"
			android:visibility="gone"/>
	</FrameLayout>

	<TextView
		android:id="@+id/tv_tab_item"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/fl_item"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:textColor="@drawable/sel_tab_item_text"
		android:textSize="@dimen/txtSize14"
		tools:text="主页"/>
</RelativeLayout>