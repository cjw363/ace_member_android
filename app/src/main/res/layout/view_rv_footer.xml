<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/height45"
	android:orientation="horizontal">

	<LinearLayout
		android:id="@+id/ll_loading"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="horizontal"
		android:visibility="visible">

		<ProgressBar
			android:id="@+id/pb"
			android:layout_width="@dimen/width24"
			android:layout_height="@dimen/height24"/>

		<TextView
			android:id="@+id/tv_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin5"
			android:text="@string/wait_for_loading"
			android:textColor="@color/clr_common_content"
			android:textSize="@dimen/txtSize20"/>
	</LinearLayout>

	<TextView
		android:id="@+id/tv_load_result"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center"
		android:text="@string/no_more"
		android:textColor="@color/clr_common_content"
		android:textSize="@dimen/txtSize20"
		android:visibility="gone"/>

</RelativeLayout>
