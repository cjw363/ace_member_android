<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools" android:background="@color/white" android:orientation="vertical">


	<LinearLayout
		android:id="@+id/ph_ll_date"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/clr_primary_separator"
		android:orientation="horizontal"
		android:paddingBottom="@dimen/padding6"
		android:paddingStart="@dimen/padding15"
		android:paddingEnd="@dimen/padding15"
		android:paddingTop="@dimen/padding6">

		<TextView
			android:id="@+id/ph_tv_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="2017-07"
			android:textColor="@color/clr_primary_separator_title"
			android:textSize="@dimen/txtSize14"/>

	</LinearLayout>

	<RelativeLayout
		android:id="@+id/ph_rl_content"
		android:layout_width="match_parent"
		android:layout_height="@dimen/height48"
		android:orientation="vertical">

		<android.support.v7.widget.AppCompatImageView
			android:id="@+id/ph_iv_icon"
			android:layout_width="@dimen/width25"
			android:layout_height="@dimen/height25"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/margin15"
			app:srcCompat="@drawable/ic_withdraw"/>

		<TextView
			android:id="@+id/ph_tv_time"
			android:layout_width="@dimen/width50"
			android:layout_height="@dimen/height50"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/margin10"
			android:layout_toEndOf="@id/ph_iv_icon"
			android:gravity="center"
			tools:text="06-08 15:27"
			android:textColor="@color/clr_tv_time"
			android:textSize="@dimen/txtSize14"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_toEndOf="@id/ph_tv_time">

			<TextView
				android:id="@+id/ph_tv_amount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_marginEnd="@dimen/margin15"
				android:layout_marginTop="@dimen/margin3"
				tools:text="10000,99 USD"
				android:textColor="@color/clr_amount_red"
				android:textSize="@dimen/txtSize16"/>

			<TextView
				android:id="@+id/ph_tv_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_alignParentEnd="true"
				android:layout_marginBottom="@dimen/margin5"
				android:layout_marginEnd="@dimen/margin15"
				tools:text="Pending"
				android:textSize="@dimen/txtSize16"/>

		</RelativeLayout>

		<View
			android:id="@+id/horizontal_line"
			style="@style/v_horizontal_divider_line"
			android:layout_alignParentBottom="true"/>
	</RelativeLayout>

</LinearLayout>
