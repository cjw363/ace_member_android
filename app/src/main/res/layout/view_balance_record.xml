<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:paddingBottom="@dimen/padding10"
	android:paddingEnd="@dimen/padding15"
	android:paddingStart="@dimen/padding15"
	android:paddingTop="@dimen/padding10">

	<TextView
		android:id="@+id/tv_type"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="@color/clr_common_title"
		android:textSize="@dimen/txtSize18"
		tools:text="@string/deposit"/>

	<TextView
		android:id="@+id/tv_bank_transaction_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_type"
		android:layout_marginTop="@dimen/margin5"
		android:gravity="bottom"
		android:textColor="@color/clr_common_content_hint"
		android:textSize="@dimen/txtSize14"
		tools:text="2017-01-01 12:00:00"/>

	<TextView
		android:id="@+id/tv_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:textColor="@color/clr_common_content_hint"
		android:textSize="@dimen/txtSize16"
		tools:text="Pending"/>

	<TextView
		android:id="@+id/tv_amount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/tv_bank_transaction_time"
		android:layout_alignParentEnd="true"
		android:gravity="bottom"
		android:textColor="@color/clr_common_content"
		android:textSize="@dimen/txtSize20"
		tools:text="100000 USD"/>

</RelativeLayout>