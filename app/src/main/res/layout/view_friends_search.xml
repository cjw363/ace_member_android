<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="@dimen/height45"
	android:background="@color/clr_chat_bg_search_gray"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:paddingLeft="@dimen/padding30"
	android:paddingRight="@dimen/padding30"
	>

	<EditText
		android:id="@+id/et_friends_search"
		android:layout_width="match_parent"
		android:layout_height="@dimen/height25"
		android:layout_centerVertical="true"
		android:background="@drawable/bg_friend_et_search_white"
		android:clickable="false"
		android:cursorVisible="false"
		android:focusable="false"
		android:maxLines="1"
		android:textSize="@dimen/txtSize13"/>

	<TextView
		android:id="@+id/tv_friends_search"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="@string/search"
		android:textColor="@color/clr_chat_tv_hint"
		android:textSize="@dimen/txtSize13"/>

	<android.support.v7.widget.AppCompatImageView
		android:layout_width="@dimen/width15"
		android:layout_height="@dimen/height15"
		android:layout_centerVertical="true"
		android:layout_marginEnd="@dimen/margin10"
		android:layout_toStartOf="@id/tv_friends_search"
		app:srcCompat="@drawable/ic_friends_search"
		/>

</RelativeLayout>