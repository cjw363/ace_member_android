<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/height20"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/height80"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<TextView
			style="@style/tv_common_title"
			android:layout_weight="2"
			android:text="@string/confirm_password"/>

		<EditText
			android:id="@+id/et_confirm_password"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margin10"
			android:layout_marginRight="@dimen/margin10"
			android:layout_weight="6"
			android:background="@drawable/et_style1"
			android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^*()_+-="
			android:imeOptions="flagNoExtractUi"
			android:inputType="textPassword"
			android:minHeight="@dimen/height40"
			android:textSize="@dimen/txtSize16"
			android:typeface="monospace"/>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/height20"/>

</LinearLayout>