<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="@dimen/padding10">

		<TextView
			android:id="@+id/tv_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/clr_common_content"
			android:textSize="@dimen/txtSize18"/>

		<TextView
			android:id="@+id/tv_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tv_number"
			android:layout_marginTop="@dimen/margin5"
			android:gravity="bottom"
			android:textColor="@color/clr_list_time"
			android:textSize="@dimen/txtSize14"/>

		<!--<TextView-->
			<!--android:id="@+id/tv_status"-->
			<!--android:layout_width="wrap_content"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:layout_alignParentEnd="true"-->
			<!--android:textSize="@dimen/txtSize16"/>-->

		<TextView
			android:id="@+id/tv_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:textColor="@color/clr_amount_red"
			android:textSize="@dimen/txtSize20"/>
	</RelativeLayout>

	<View
		style="@style/v_horizontal_divider_line"/>
</LinearLayout>

